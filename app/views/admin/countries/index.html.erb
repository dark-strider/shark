<h1>Listing countries</h1>

<table>
  <tr>
    <th>Name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @countries.each do |country| %>
  <tr>
    <td><%= country.name %></td>
    <td><%= link_to 'Show', [:admin, country] %></td>
    <td><%= link_to 'Edit', [:edit, :admin, country] %></td>
    <td><%= link_to 'Destroy', [:admin, country], confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

