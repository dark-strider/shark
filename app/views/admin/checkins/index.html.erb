  </tr>

<% @checkins.each do |checkin| %>
  <tr>
    <td><%= checkin.user.name %></td>
    <td><%= checkin.spot.energetic.name %></td>
    <td><%= checkin.socials.first %></td>
    <td><%= link_to 'Show', [:admin, checkin] %></td>
    <td><%= link_to 'Edit', [:edit, :admin, checkin] %></td>
    <td><%= link_to 'Destroy', [:admin, checkin], confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

